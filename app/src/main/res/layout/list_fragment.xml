<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    android:id="@+id/geralRelativeLayout">

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/coin_crystal"
        android:id="@+id/coinImageView"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/coinImageView"
        android:id="@+id/geralListView" />

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/moneyTextView"
        android:textStyle="normal|bold"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:layout_alignTop="@+id/coinImageView"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/coinImageView"
        android:layout_alignStart="@+id/coinImageView"
        android:gravity="right"
        android:layout_marginRight="10dp" />
</RelativeLayout>